{
    "name": "to",
    "displayName": "To",
    "description": "Encode, decode, format and convert everything",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "onCommand:to.reverseWord",
        "onCommand:to.base64",
        "onCommand:to.urlencode",
        "onCommand:to.flatbuffers"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "title": "Enable CodeLens",
                "command": "to.enableCodeLens",
                "category": "To"
            },
            {
                "title": "Disable Codelens",
                "command": "to.disableCodeLens",
                "category": "To"
            },
            {
                "command": "to.reverseWord",
                "title": "Reverse Word",
                "category": "To"
            },
            {
                "command": "to.base64",
                "title": "Base64",
                "category": "To"
            },
            {
                "command": "to.urlencode",
                "title": "Urlencode",
                "category": "To"
            },
            {
                "command": "to.flatbuffers",
                "title": "FlatBuffers",
                "category": "To"
            }
        ],
        "configuration": {
            "properties": {
                "to.enableCodeLens": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.47.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "@types/flatbuffers": "^1.10.0",
        "flatbuffers": "^1.12.0"
    }
}
